@model IOS_PROJECT3.ViewModels.EditForumNodeViewModel
<h3>Редактирование ветки форума</h3>
<form method="post" asp-action="EditForumNode" asp-controller="Forum">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="NodeId" class="form-control" />
        <label asp-for="NodeName" class="control-label">Введите название:</label>
        <input type="text" asp-for="NodeName" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-primary btn-block" />
    </div>
    <a class="btn btn-outline-secondary btn-sm" style="position:fixed; top:80px; left:20px" asp-action="ForumNode" asp-controller="Forum" asp-route-NodeId="@Model.NodeId">Назад</a>
</form>