@model IOS_PROJECT3.ViewModels.EditSpecialityViewModel
@{
    ViewBag.Title = "Редактирование специальности";
}
@if (User.IsInRole("Manager") || Model.userGrants.Contains(IOS_PROJECT3.Grants.Grants.Specialities.Edit))
{
    <form method="post" asp-action="Edit" asp-controller="Specialities">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Введите название:</label>
            <input type="text" asp-for="Name" class="form-control" />
            <input type="hidden" asp-for="SpecId" class="form-control" />
            <input type="hidden" asp-for="DepId" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-primary btn-block" />
        </div>
        <a class="btn btn-outline-secondary btn-block" asp-action="Index" asp-controller="Specialities" asp-route-DepId="@Model.DepId">Назад</a>
    </form>
}
    