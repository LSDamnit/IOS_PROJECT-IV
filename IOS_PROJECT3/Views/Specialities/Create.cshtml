@model IOS_PROJECT3.ViewModels.CreateSpecialityViewModel
@{
    ViewBag.Title = "Добавление специальности";
}
@if (User.Identity.IsAuthenticated && (User.IsInRole("Manager") || Model.userGrants.Contains(IOS_PROJECT3.Grants.Grants.Specialities.Create)))
{
    <form method="post" asp-action="Create" asp-controller="Specialities">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="DepId" class="form-control" />
            <label asp-for="Name" class="control-label">Введите название:</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Добавить" class="btn btn-outline-primary btn-block" />
        </div>
        <a class="btn btn-outline-secondary btn-sm" id="GoBackBtn" asp-action="Index" asp-controller="Specialities" asp-route-DepId="@Model.DepId">Назад</a>
    </form>
}
    