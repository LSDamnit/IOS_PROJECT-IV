@model IOS_PROJECT3.ViewModels.ScheduleViewModel

<style>
    .grid-container {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr;
        /*grid-template-rows:;
        column-gap: 1px 1px;*/
        grid-template-areas: "mon tue wed thu fri sat";
    }
    .mon {
        grid-area: mon;
    }
    .tue {
        grid-area: tue;
    }
    .wed {
        grid-area: wed;
    }
    .thu {
        grid-area: thu;
    }
    .fri {
        grid-area: fri;
    }
    .sat {
        grid-area: sat;
    }
    table{
        border-collapse:separate;
        border-style:solid;
        border:1px;
    }
</style>
<h3>Расписание @Model.WeekScheduleName</h3>
<div class="grid-container" style="font-size:70%">
    <div class="mon">
        <table>
            <tr><th>Понедельник</th></tr>
            @if(Model.ScheduleForDays["mon"]!=null)
            @foreach (var di in Model.ScheduleForDays["mon"])
            {
                <tr><td><b>@di.Name</b><br>
                        @di.Type<br>
                        @di.TeacherFIO<br>
                        @di.Classroom 
                </td></tr>
                
            }
        </table>
    </div>
    <div class="tue">
        <table>
            <tr><th>Вторник</th></tr>
            @if (Model.ScheduleForDays["tue"] != null)
                @foreach (var di in Model.ScheduleForDays["tue"])
                {
                    <tr>
                        <td>
                            <b>@di.Name</b><br>
                            @di.Type<br>
                            @di.TeacherFIO<br>
                            @di.Classroom
                        </td>
                    </tr>

                }
        </table>
    </div>
    <div class="wed">
        <table>
            <tr><th>Среда</th></tr>
            @if (Model.ScheduleForDays["wed"] != null)
                @foreach (var di in Model.ScheduleForDays["wed"])
                {
                    <tr>
                        <td>
                            <b>@di.Name</b><br>
                            @di.Type<br>
                            @di.TeacherFIO<br>
                            @di.Classroom
                        </td>
                    </tr>

                }
        </table>
    </div>
    <div class="thu">
        <table>
            <tr><th>Четверг</th></tr>
            @if (Model.ScheduleForDays["thu"] != null)
                @foreach (var di in Model.ScheduleForDays["thu"])
                {
                    <tr>
                        <td>
                            <b>@di.Name</b><br>
                            @di.Type<br>
                            @di.TeacherFIO<br>
                            @di.Classroom
                        </td>
                    </tr>

                }
        </table>
    </div>
    <div class="fri">
        <table>
            <tr><th>Пятница</th></tr>
            @if (Model.ScheduleForDays["fri"] != null)
                @foreach (var di in Model.ScheduleForDays["fri"])
