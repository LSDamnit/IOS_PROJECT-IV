@model IOS_PROJECT3.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
@if (User.Identity.IsAuthenticated && Model.userGrants.Contains(IOS_PROJECT3.Grants.Grants.UsersAdmin.Edit))
{
    <form asp-action="Edit" asp-controller="UsersAdmin">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label">Email</label>
            <input type="text" asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="FIO" class="control-label">ФИО</label>
            <input type="text" asp-for="FIO" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
        </div>
        <a class="btn btn-outline-secondary btn-sm" style="position:fixed; top:80px; left:20px" asp-action="Index" asp-controller="UsersAdmin">Назад</a>
    </form>
}
